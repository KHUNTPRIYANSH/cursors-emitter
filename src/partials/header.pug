header(role="banner")
  block header
    h1=nameCursor

  nav(role="navigation"): ul
    each cursor, key in cursors
      li: a(href="index"+(key == 0 ? "" : key+1)+".pug" class=key == 0 ? "active" : null): span= "demo "+(key+1)
        i= " ("+cursor+")"

  //-ul
    - var urlGits = ["https://gitlab.com/marvinx-x", "https://github.com/marvinx-x", "https://bitbucket.org/Marvin_X"]
    each url in urlGits
      - var gitName = url.substring(url.indexOf('//') + 2, url.indexOf('.'));
      - var firstLetterGit = gitName.charAt(0).toUpperCase();
      - var name = firstLetterGit + gitName.slice(1)
      li: a(href=url+"/cursors-emitter" title=name target="_blank")= name

  #logo
